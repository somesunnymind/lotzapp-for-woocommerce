# EditorConfig enforces UTF-8 w/out BOM and consistent indentation.
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php,js,ts,jsx,tsx,json,css,scss,html}]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
